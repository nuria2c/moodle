{{!
    Course competencies template.
}}
<div data-region="coursecompetenciespage">
<div data-region="coursecompetencies">
<table class="generaltable fullwidth managecompetencies">
<tbody class="drag-parentnode">
{{#competencies}}
    <tr class="drag-samenode" data-id="{{id}}">
    <td>
    <span class="drag-handlecontainer pull-left"></span>
    <div class="pull-right"><a href="#" data-action="delete-competency-link" data-id="{{id}}">{{#pix}}t/delete, core, {{#str}}delete{{/str}}{{/pix}}</a></div>
    {{> tool_lp/competency_summary }}
    {{#coursecompetencyoutcomelabel}}
        {{coursecompetencyoutcomelabel}}
        <select name="ruleoutcome" data-id="{{coursecompetencyid}}">
          {{#ruleoutcomeoptions}}
             <option value="{{value}}" {{#selected}} selected {{/selected}} >{{text}}</option>
          {{/ruleoutcomeoptions}}
        </select>
    {{/coursecompetencyoutcomelabel}}
    </td>
    </tr>
{{/competencies}}
</tbody>
</table>
{{^competencies}}
<p class="alert-info">
    {{#str}}nocompetenciesincourse, tool_lp{{/str}}
</p>
{{/competencies}}
</div>
<div data-region="actions">
<div class="pull-right">
{{#canmanagecoursecompetencies}}
<button style="display: none">{{#str}}linkcoursecompetencies, tool_lp{{/str}}</button>
{{/canmanagecoursecompetencies}}
</div>
{{#canmanagecompetencyframeworks}}
<p><a href="{{manageurl}}">{{#str}}managecompetenciesandframeworks, tool_lp{{/str}}</a></p>
{{/canmanagecompetencyframeworks}}
</div>
</div>
{{#js}}
require(['tool_lp/competencies'], function(mod) {
    (new mod({{courseid}}, 'course', {{pagecontextid}}));
});
{{/js}}
